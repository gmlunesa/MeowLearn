@model MeowLearn.Entities.Content

@{
    ViewData["Title"] = "Studying...";
}

<h2>@Model.Title</h2>

@if (Model.Description != null)
{
    <div class="row">
        <div id="TextContent" class="mt-3 col-md-10">
            @Html.Raw(Model.Description)
        </div>
    </div>
}

@if(Model.VideoLink != null)
{
    <div class="row">
        <div class="mt-3 col-md-10">
            <div id="VideoContent" class="video-container mt-3">
                <iframe width="550" height="350" src="@Model.VideoLink" allowfullscreen="" border="0">
                </iframe>
            </div>
        </div>
    </div>
}