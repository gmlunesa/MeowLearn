@model MeowLearn.Areas.Admin.Models.UserCategoryListModel
@using MeowLearn.Extensions

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Users != null)
        {
            @foreach(var user in Model.Users)
            {
                <tr>
                    <td class="text-center">
                        @if(Model.UsersSelected != null && Model.UsersSelected.Contains(user, new CompareUsersExtensions()))
                        {

                             <input type="checkbox" class="form-check-input" id="UsersSelected" name="UsersSelected" checked value="@user.Id" />                           
                        }
                        else
                        {
                            <input type="checkbox" class="form-check-input" id="UsersSelected" name="UsersSelected" value="@user.Id" />
  
                        }
                    </td>
                    <td>
                        @user.FirstName
                    </td>
                    <td>
                        @user.LastName
                    </td>
                </tr>
            }
        }
    </tbody>
</table>